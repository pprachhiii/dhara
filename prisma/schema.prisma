generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id String @id @default(cuid())
  reporter String
  title String
  description String
  imageUrl String?
  status  ReportStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks Task[]
}

model Task {
  id  String @id @default(cuid())
  reportId String
  report Report @relation(fields: [reportId], references: [id])
  comfort SocializingLevel
  assignedTo  String?
  status  TaskStatus @default(OPEN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Drive {
  id  String @id @default(cuid())
  participant Int
  date DateTime
  title String
  description String?
  createdAt DateTime @default(now())
}

enum ReportStatus {
  PENDING
  AUTHORITY_CONTACTED
  IN_PROGRESS
  RESOLVED
}

enum TaskStatus {
  OPEN
  ASSIGNED
  DONE
}

enum SocializingLevel {
  SOLO
  DUAL
  GROUP
}