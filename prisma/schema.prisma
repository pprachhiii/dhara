generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id                String             @id @default(cuid())
  reporter          String
  title             String
  description       String
  imageUrl          String?
  status            ReportStatus       @default(PENDING)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  tasks             Task[]
  reportAuthorities ReportAuthority[]
}

model Task {
  id         String           @id @default(cuid())
  reportId   String
  report     Report           @relation(fields: [reportId], references: [id])
  comfort    SocializingLevel
  assignedTo String?
  status     TaskStatus       @default(OPEN)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
}

model Drive {
  id          String    @id @default(cuid())
  participant Int
  date        DateTime
  title       String
  description String?
  createdAt   DateTime  @default(now())
}

model Authority {
  id                String             @id @default(cuid())
  name              String
  type              AuthorityType
  city              String
  region            String?            // optional: ward / neighborhood
  email             String?
  phone             String?
  website           String?
  active            Boolean            @default(false) // starts as FALSE, verified later
  submittedBy       String?            // optional: user who submitted
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  reportAuthorities ReportAuthority[]
}

model ReportAuthority {
  id          String        @id @default(cuid())
  report      Report        @relation(fields: [reportId], references: [id])
  reportId    String
  authority   Authority     @relation(fields: [authorityId], references: [id])
  authorityId String
  volunteer   String?       // who contacted
  status      ContactStatus @default(PENDING)
  contactedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum ReportStatus {
  PENDING
  AUTHORITY_CONTACTED
  IN_PROGRESS
  RESOLVED
}

enum TaskStatus {
  OPEN
  ASSIGNED
  DONE
}

enum SocializingLevel {
  SOLO
  DUAL
  GROUP
}

enum AuthorityType {
  GOVERNMENT
  NGO
  OTHERS
}

enum ContactStatus {
  PENDING
  CONTACTED
  RESPONDED
  NO_RESPONSE
}